{
	"ts-node": {
		"files": true
	},
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist/src",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true
	},
	"include": ["src", "typings"],
	"exclude": ["node_modules"]
}
